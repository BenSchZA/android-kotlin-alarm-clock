<LinearLayout
    android:id="@+id/friendLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_normal"
    android:longClickable="true"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:id="@+id/txtInitials"
            android:text="@string/text_name_initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_friends_profile_pic"
            android:layout_alignTop="@+id/my_friends_profile_pic"
            android:layout_alignRight="@+id/my_friends_profile_pic"
            android:layout_alignBottom="@+id/my_friends_profile_pic"
            android:gravity="center"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/my_friends_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_audio_friends_profile_pic_circle" />
        <!--android:alpha="0.3"-->
    </RelativeLayout>

    <TextView
        android:id="@+id/my_friends_profile_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_large"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_large" />

    <ImageButton
        android:id="@+id/friends_send_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_large"
        android:background="@drawable/md_transparent"
        android:clickable="true"
        android:src="@drawable/ic_send_white_24dp" />

</LinearLayout>