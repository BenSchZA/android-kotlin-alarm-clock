<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/intro_dots_margin_bottom"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="@dimen/intro_dots_height"
        app:tabPaddingEnd="@dimen/spacing_xxlarge"
        app:tabPaddingStart="@dimen/spacing_xxlarge" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tabDots"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/spacing_xxxlarge">

        <Button
            android:id="@+id/intro_get_started_button"
            style="@style/RoosterButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_get_started" />
    </FrameLayout>

</RelativeLayout>