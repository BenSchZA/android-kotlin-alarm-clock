<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roosterFriendSelectLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_normal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtInitials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_audio_friend_profile_pic"
            android:layout_alignLeft="@+id/new_audio_friend_profile_pic"
            android:layout_alignRight="@+id/new_audio_friend_profile_pic"
            android:layout_alignTop="@+id/new_audio_friend_profile_pic"
            android:gravity="center"
            android:text="@string/text_name_initials"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/new_audio_friend_profile_pic"
            android:elevation="@dimen/cardview_default_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_profile_pic_circle" />
        <!--android:alpha="0.3"-->
    </RelativeLayout>

    <TextView
        android:id="@+id/new_audio_friend_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/spacing_large"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xlarge" />

    <RadioButton
        android:id="@+id/new_audio_friend_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical" />

</LinearLayout>