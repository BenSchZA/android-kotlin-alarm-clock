<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/onboardingChannelOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black_overlay"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/imageFrame"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/spacing_xxxlarge"
        android:layout_marginRight="@dimen/spacing_xxxlarge"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="@string/onboarding_image_transition" />

        <SeekBar
            android:id="@+id/seekbar"
            android:background="@color/black_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/spacing_small"/>
    </FrameLayout>

    <TextView
        android:layout_marginLeft="@dimen/spacing_xxxlarge"
        android:layout_marginRight="@dimen/spacing_xxxlarge"
        android:layout_alignTop="@id/imageFrame"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="@dimen/spacing_xsmall"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/black_overlay"/>

</RelativeLayout>