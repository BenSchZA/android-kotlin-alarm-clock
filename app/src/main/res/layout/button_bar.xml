<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="bottom"
    android:background="@color/grey_transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home_my_alarms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="My alarms"
                android:padding="@dimen/spacing_normal_large"
                android:soundEffectsEnabled="true"
                android:src="@drawable/rooster_button_bar_add_alarm" />

            <ImageView
                android:id="@+id/notification_roosters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/home_my_alarms"
                android:layout_alignTop="@id/home_my_alarms"
                android:background="@drawable/notification_circle_yellow"
                android:visibility="gone" />

        </RelativeLayout>

    </FrameLayout>

