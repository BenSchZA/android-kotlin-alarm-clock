    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <ImageButton
            android:id="@+id/home_my_uploads"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="My social roosters"
            android:padding="@dimen/spacing_normal_large"
            android:soundEffectsEnabled="true"
            android:src="@drawable/rooster_button_bar_chat" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <ImageButton
            android:id="@+id/home_record_audio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Record audio"
            android:padding="@dimen/spacing_normal_large"
            android:soundEffectsEnabled="true"
            android:src="@drawable/rooster_button_bar_record_audio" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <ImageButton
            android:id="@+id/home_discover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Discover"
            android:padding="@dimen/spacing_normal_large"
            android:soundEffectsEnabled="true"
            android:src="@drawable/rooster_button_bar_discover" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="My friends"
                android:padding="@dimen/spacing_normal_large"
                android:soundEffectsEnabled="true"
                android:src="@drawable/rooster_button_bar_friends" />

            <ImageView
                android:id="@+id/notification_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/home_friends"
                android:layout_alignTop="@id/home_friends"
                android:background="@drawable/notification_circle_yellow"
                android:visibility="gone" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>