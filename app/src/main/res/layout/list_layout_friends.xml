<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_normal"
    android:layout_marginLeft="@dimen/spacing_large"
    android:layout_marginRight="@dimen/spacing_large">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:id="@+id/txtInitials"
            android:text="@string/text_name_initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_friends_profile_pic"
            android:layout_alignTop="@+id/my_friends_profile_pic"
            android:layout_alignRight="@+id/my_friends_profile_pic"
            android:layout_alignBottom="@+id/my_friends_profile_pic"
            android:gravity="center"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/my_friends_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_audio_friends_profile_pic_circle"
            android:alpha="0.3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/my_friends_profile_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Friend name"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_large"
        android:layout_toLeftOf="@id/my_friends_profile_pic"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_large" />

    <Button
        android:id="@+id/friends_button"
        style="@style/RoosterButtonSemiTransparentStyle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="@string/text_friends_button"/>

</LinearLayout>