<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <bitmap android:src="@drawable/ic_group_white_24dp" android:tint="@color/white" />
    </item>
    <item android:state_selected="false">
        <bitmap android:src="@drawable/ic_group_white_24dp" android:tint="@color/white_30_percent_transparent" />
    </item>
    <item android:state_selected="true">
        <bitmap android:src="@drawable/ic_group_white_24dp" android:tint="@color/white" />
    </item>
</selector>