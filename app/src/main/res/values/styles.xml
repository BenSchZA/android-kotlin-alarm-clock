<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@color/normal</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBarIntro" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RoosterEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="RoosterButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:background">@drawable/rooster_button</item>
    </style>

    <style name="RoosterButtonLightBlueStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">38sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">140sp</item>
        <item name="android:background">@drawable/rooster_button_light_blue</item>
    </style>

    <style name="RoosterButtonSemiTransparentStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:background">@drawable/rooster_button_semi_transparent</item>
    </style>

    <style name="AlarmDayCircle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selectable_circle_background</item>
    </style>

    <style name="InfoCircle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selectable_circle_small</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
