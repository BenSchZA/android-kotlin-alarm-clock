<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roostermornings.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--<uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />-->

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/rooster_blue" />

        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="500">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.DeviceAlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="receiver.ALARM_RECEIVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.BackgroundTaskReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="207f8c17b3eb2499afa66f49b1502cae676c5ca2" />

        <!-- windowSoftInputMode ensures that text entry for mobile number is always visible -->
        <activity
            android:name=".activity.IntroFragmentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarIntro"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.SignInActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarIntro" />
        <activity
            android:name=".activity.SignupEmailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarIntro" />
        <activity
            android:name=".activity.MyAlarmsFragmentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/my_alarms"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDay.NoActionBar" />
        <activity
            android:name=".activity.NewAlarmFragmentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDay.NoActionBar" />
        <activity
            android:name=".activity.NewAudioRecordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Record Audio"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDay.NoActionBar" />
        <activity
            android:name=".activity.NewAudioFriendsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Select Recipients"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDay.NoActionBar" />
        <activity
            android:name=".activity.DeviceAlarmFullScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:showOnLockScreen="true"
            android:theme="@style/AppThemeDay.NoActionBar" />

        <service
            android:name=".service.BackgroundTaskIntentService"
            android:exported="false" />
        <service android:name=".util.RoosterFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".util.RoosterFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.FriendsFragmentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Friends"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDay.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTop" >
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable_friends" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.FirebaseListenerService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.AudioService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.UploadService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.NotificationListener"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>